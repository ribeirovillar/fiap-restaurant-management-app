    "item": [
        {
            "name": "Users",
            "item": [
                {
                    "name": "Create User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/users",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "users"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"login\": \"testuser\",\n    \"password\": \"password123\",\n    \"userType\": \"OWNER\"\n}"
                        }
                    }
                },
                {
                    "name": "Find User by ID",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "users", "{{userId}}"]
                        }
                    }
                },
                {
                    "name": "Find User by Login",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/users/login/{{userLogin}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "users", "login", "{{userLogin}}"]
                        }
                    }
                },
                {
                    "name": "Update User",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "users", "{{userId}}"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Updated Test User\",\n    \"email\": \"updated@example.com\",\n    \"login\": \"updateduser\",\n    \"password\": \"newpassword123\",\n    \"userType\": \"OWNER\"\n}"
                        }
                    }
                },
                {
                    "name": "Delete User",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "users", "{{userId}}"]
                        }
                    }
                }
            ]
        },
